{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "Gemini Bookmarks",
  "version": "1.0.0",
  "description": "Bookmark and quickly navigate between responses in a Gemini conversation.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "{{chrome}}.host_permissions": [
    "https://gemini.google.com/u/*/app/*",
    "https://gemini.google.com/u/*/gem/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/u/*/app/*",
        "https://gemini.google.com/u/*/gem/*"
      ],
      "run_at": "document_end",
      "js": [
        "src/main.js"
      ],
      "css": ["src/ui/styles.css"]
    }
  ],
  "icons": {
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  }
}
